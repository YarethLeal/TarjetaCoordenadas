@model AUTCoordenadasEntities.Entities.BaseModel
@using Microsoft.AspNetCore.Http
@{

    var vUser = Context.Session.GetString("_User");<!--Capturar la sesión en la variable vUser-->

}
<div>
    <a class="ui-btn ui-shadow ui-corner-all ui-btn-inline ui-mini" style="float:right">Bienvenido: @vUser</a>
</div>
<div class="d-flex justify-content-center">

    <form asp-controller="Usuario" asp-action="Autenticar">
        <div class="form-group row">
            <input class="col-sm-2" asp-for="FC1" type="text" value="@ViewBag.Casilla1" readonly>
            <div class="col-sm-10">
                <input asp-for="CA1" type="password" class="form-control" id="CA1" required>

            </div>
        </div>
        <div class="form-group row">
            <input class="col-sm-2" asp-for="FC2" type="text" value="@ViewBag.Casilla2" readonly>
            <div class="col-sm-10">
                <input asp-for="CA2" type="password" class="form-control" id="CA2" required>
            </div>
        </div>
        <div class="form-group row">
            <input class="col-sm-2" asp-for="FC3" type="text" value="@ViewBag.Casilla3" readonly>
            <div class="col-sm-10">
                <input asp-for="CA3" type="password" class="form-control" id="CA3" required>
            </div>
        </div>
        <div class="form-group row">
            <input class="col-sm-2" asp-for="FC4" type="text" value="@ViewBag.Casilla4" readonly>
            <div class="col-sm-10">
                <input asp-for="CA4" type="password" class="form-control" id="CA4" required>
            </div>
        </div>
        <div class="text-center">
            <input type="submit" value="Validar" class="btn btn-primary" style="background-color: #005cb9;" />

        </div>

    </form>
</div>

