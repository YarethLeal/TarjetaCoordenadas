@model AUTCoordenadasEntities.Entities.BaseModel

<div class="d-flex justify-content-center">

    <form asp-controller="Usuario" asp-action="Reporte1">
        <div class="form-group">
            <label asp-for="accion" class="control-label"></label>
            <select asp-for="accion" asp-items="ViewBag.Acciones" class="custom-select">
            </select>
        </div>
        <div class="form-group row">
            <label asp-for="FechaInicio" class="control-label"></label>
            <input asp-for="FechaInicio" class="form-control" type="datetime-local" />
            <span asp-validation-for="FechaInicio" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="FechaFin" class="control-label"></label>
            <input asp-for="FechaFin" class="form-control" type="datetime-local" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="usuario" class="control-label"></label>
            <input asp-for="usuario" class="form-control" value="Usuario administrador" />
            <span asp-validation-for="usuario" class="text-danger"></span>
        </div>


        <div class="text-center">
            <input type="submit" value="Validar" class="btn btn-primary" style="background-color: #005cb9;" />

        </div>

    </form>
</div>
