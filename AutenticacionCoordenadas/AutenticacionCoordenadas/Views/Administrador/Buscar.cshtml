@model List<AUTCoordenadasEntities.Entities.Usuario>




<div>
    <a class="ui-btn ui-shadow ui-corner-all ui-btn-inline ui-mini" style="float:right">Bienvenido: Usuario</a>
</div>
<div class="d-flex justify-content-center">

    <div>
        <p style="font-size:19px">Buscar usuario</p>
        <form asp-controller="Administrador" asp-action="BuscarUsuarioNombre" method="post">

            <div class="form-group w-100">
                <label class="control-label">Nombre de usuario:</label>
                <input type="text" name="nombre" required/>
            </div>


            <div class="text-center">
                <input type="submit" value="Buscar" class="btn btn-primary" style="background-color: #005cb9;" />
                <input type="submit" value="Cancelar" class="btn btn-primary" style="background-color: #005cb9;" />
            </div>
        </form >


    </div>
</div>

<div class="container p-3 my-3 text-black-50" style="background-color: #ffffff;">
    <h1>Usuarios:</h1>

    <div class="table-responsive">
        <table class="table" id="table">
            <tr>
                <th>Id</th>
                <th>Identificación</th>
                <th>Nombre</th>
                <th>Primer apellido</th>
                <th>Oficina</th>
            </tr>

            @foreach (var usuarios in Model)
            {
        <tr>
            <td>@usuarios.Id</td>
            <td>@usuarios.Identificacion</td>
            <td>@usuarios.NombreUsuario</td>
            <td>@usuarios.PrimerApellido</td>
            <td>@usuarios.OficinaID</td>

        </tr>
                    }

            </table>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xl-3">
            <div class="modal fade" id="modalB">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">
                                x
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="text-center">
                                <form asp-area="" asp-controller="Administrador" asp-action="Actualiza">
                                    <input type="submit" value="Actualizar usuario" class="btn btn-primary" style="background-color: #005cb9; width: 200px;" />
                                </form>
                                <br />
                                <form asp-area="" asp-controller="Administrador" asp-action="EliminarUsuario">
                                   
                                    
                                <input type="submit" value="Borrar usuario" class="btn btn-primary" style="background-color: #005cb9; width: 200px;" />
                                </form >
</div>
                        </div>
                        <div class="modal-footer">

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>

    var table = document.getElementById('table');

    for (var i = 1; i < table.rows.length; i++) {
        table.rows[i].onclick = function () {
            // rIndex = this.rowIndex;
            // alert(this.cells[0].innerHTML);
            //alert("Borrar");

            //obtener el id 
            $("#modalB").modal('show');
        };
    }


</script>
